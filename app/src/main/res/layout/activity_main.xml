<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gayedesign.alagiesaine.audiomanager.MainActivity">

    <Button
        android:text="Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:id="@+id/modeButton"
        android:layout_below="@+id/silentButton"
        android:layout_alignLeft="@+id/silentButton"
        android:layout_alignStart="@+id/silentButton" />

    <Button
        android:text="Vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vibrateButton"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignBaseline="@+id/normalButton"
        android:layout_alignBottom="@+id/normalButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Silent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/silentButton"
        android:layout_alignBaseline="@+id/normalButton"
        android:layout_alignBottom="@+id/normalButton"
        android:layout_toLeftOf="@+id/vibrateButton"
        android:layout_toStartOf="@+id/vibrateButton"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp" />

    <Button
        android:text="Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/normalButton"
        android:layout_marginTop="71dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />
</RelativeLayout>
