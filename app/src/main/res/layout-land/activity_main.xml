<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gayedesign.alagiesaine.audiomanager.MainActivity">

    <Button
        android:text="Silent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/silentButton"
        android:layout_alignBaseline="@+id/normalButton"
        android:layout_alignBottom="@+id/normalButton"
        android:layout_toRightOf="@+id/normalButton"
        android:layout_toEndOf="@+id/normalButton"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp" />

    <Button
        android:text="Vibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vibrateButton"
        android:layout_alignBaseline="@+id/silentButton"
        android:layout_alignBottom="@+id/silentButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <Button
        android:text="Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:id="@+id/modeButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <Button
        android:text="Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/normalButton"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:layout_alignBaseline="@+id/modeButton"
        android:layout_alignBottom="@+id/modeButton"
        android:layout_toRightOf="@+id/modeButton"
        android:layout_toEndOf="@+id/modeButton" />
</RelativeLayout>
